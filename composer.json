{
    "name": "gbelsalvador/data-transformer",
    "description": "Professional PHP library for transforming data between multiple formats",
    "type": "library",
    "license": "MIT",
    "keywords": ["data", "transformer", "converter", "csv", "json", "xml", "sql", "xlsx"],
    "authors": [
        {
            "name": "gedeon banyi bantu",
            "email": "gbelsalvador6@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "phpoffice/phpspreadsheet": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Gbelsalvador\\DataTransformer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gbelsalvador\\DataTransformer\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,

    "scripts": {
        "post-autoload-dump": [
            "@php fix-autoload.php"
        ]
    }

}
